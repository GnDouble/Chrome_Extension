{
  "manifest_version": 3,
  "name": "To-Do List Extension",
  "description": "A simple to-do list extension that helps you keep track of your tasks and save them for future sessions.",
  "version": "1.0",
  "author": "Marvin Weiss",
  "icons": {
    "16": "images/image (1).png", 
    "32": "images/image (2).png",
    "48": "images/image (3).png",
    "128": "images/image (4).png"
  },
  "action": {
    "default_icon": {
      "16": "images/image (1).png",
      "32": "images/image (2).png",
      "48": "images/image (3).png",
      "128": "images/image (4).png"
    },
    "default_popup": "index.html",
    "default_title": "Open To-Do List"
  },
  "permissions": ["storage"]
}
